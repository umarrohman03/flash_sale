{
  "name": "flash-sale-backend",
  "version": "1.0.0",
  "description": "Flash Sale Backend Service with TypeScript and SOLID principles",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start:worker": "ts-node-dev --respawn --transpile-only src/worker/index.ts",
    "migrate": "POSTGRES_HOST=localhost POSTGRES_PORT=5432 POSTGRES_USER=postgres1 POSTGRES_PASSWORD=postgres1 POSTGRES_DB=flash_sale ts-node src/scripts/runMigrations.ts",
    "migrate:prod": "node dist/scripts/runMigrations.js",
    "migrate:reset": "ts-node src/scripts/resetMigrations.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testNamePattern='unit'",
    "test:integration": "jest --testNamePattern='integration-mocked'",
    "stress-test": "ts-node scripts/stress-test.ts",
    "verify-stress-test": "ts-node scripts/verify-stress-test-results.ts",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "flash-sale",
    "typescript",
    "redis",
    "kafka",
    "postgres"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.3",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
